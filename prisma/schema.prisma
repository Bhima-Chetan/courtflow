generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum CourtType {
  INDOOR
  OUTDOOR
}

enum CourtStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
}

enum EquipmentType {
  RACKET
  SHOES
}

enum BookingStatus {
  CONFIRMED
  CANCELED
  COMPLETED
  WAITLISTED
}

enum PricingRuleType {
  TIME_OF_DAY
  WEEKEND
  COURT_TYPE
  RESOURCE_SURCHARGE
  PERCENTAGE
  FLAT_FEE
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  bookings      Booking[]
  waitlistEntries WaitlistEntry[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Court {
  id          String      @id @default(cuid())
  name        String
  type        CourtType
  status      CourtStatus @default(ACTIVE)
  baseRate    Float
  description String?
  imageUrl    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  bookings    Booking[]
  waitlistEntries WaitlistEntry[]

  @@map("courts")
}

model Equipment {
  id              String        @id @default(cuid())
  name            String
  type            EquipmentType
  size            String?
  totalQuantity   Int
  availableQty    Int
  pricePerHour    Float
  perSlotMax      Int           @default(10)
  description     String?
  imageUrl        String?
  status          String        @default("ACTIVE")
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  bookingItems    BookingItem[]

  @@map("equipment")
}

model Coach {
  id             String   @id @default(cuid())
  name           String
  bio            String?
  specialization String?
  hourlyRate     Float
  imageUrl       String?
  status         String   @default("ACTIVE")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  availability   CoachAvailability[]
  bookings       Booking[]

  @@map("coaches")
}

model CoachAvailability {
  id        String    @id @default(cuid())
  coachId   String
  dayOfWeek DayOfWeek
  startTime String
  endTime   String
  isActive  Boolean   @default(true)
  
  specificDate DateTime?
  isOverride   Boolean   @default(false)

  coach     Coach     @relation(fields: [coachId], references: [id], onDelete: Cascade)

  @@map("coach_availability")
}

model Booking {
  id          String        @id @default(cuid())
  userId      String
  courtId     String
  coachId     String?
  startTime   DateTime
  endTime     DateTime
  status      BookingStatus @default(CONFIRMED)
  totalPrice  Float
  priceBreakdown Json?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  court       Court         @relation(fields: [courtId], references: [id], onDelete: Cascade)
  coach       Coach?        @relation(fields: [coachId], references: [id], onDelete: SetNull)
  
  bookingItems BookingItem[]

  @@unique([courtId, startTime, endTime, status])
  @@index([userId])
  @@index([courtId])
  @@index([startTime])
  @@map("bookings")
}

model BookingItem {
  id          String    @id @default(cuid())
  bookingId   String
  equipmentId String
  quantity    Int
  pricePerUnit Float
  totalPrice  Float

  booking     Booking   @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  @@map("booking_items")
}

model PricingRule {
  id          String          @id @default(cuid())
  name        String
  type        PricingRuleType
  isActive    Boolean         @default(true)
  priority    Int             @default(0)
  
  conditions  Json?
  amount      Float
  isPercentage Boolean        @default(false)
  
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@map("pricing_rules")
}

model WaitlistEntry {
  id          String   @id @default(cuid())
  userId      String
  courtId     String
  startTime   DateTime
  endTime     DateTime
  status      String   @default("WAITING")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  court       Court    @relation(fields: [courtId], references: [id], onDelete: Cascade)

  @@index([courtId, startTime])
  @@map("waitlist_entries")
}
